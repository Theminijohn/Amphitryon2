<div>
  <h2>Sign in</h2>

  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-horizontal'}) do |f| %>

      <!-- Email Address -->
      <%= f.input :email, :wrapper => :append do %>
          <%= f.input_field :email %><span class="add-on"><i class="icon-envelope"></i></span>
      <% end %>

      <!-- Password -->
      <%= f.input :password, label: "New Password", autocomplete: "off", :wrapper => :append do %>
          <%= f.input_field :password %><span class="add-on"><i class="icon-key"></i></span>
      <% end %>

      <%= f.input :remember_me, as: :boolean %>

      <div class="form-actions">
        <%= f.submit "Sign in", class: "btn btn-primary" %>
      </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
