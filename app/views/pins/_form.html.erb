<%= simple_form_for(@pin, html: { class: "form-horizontal"}) do |f| %>
    <%= f.error_notification %>
    <%= f.full_error :image_file_size, class: "alert alert-error" %>
    <%= f.full_error :image_content_type, class: "alert alert-error" %>

    <%= f.input :image, label: "Upload an Image" %>


    <%= f.input :pinname, input_html: { rows: "1"}, label: "Name", :wrapper => :append do %>
        <%= f.input_field :pinname %><span class="add-on"><i class="icon-list-ul"></i></span>
    <% end %>

    <%= f.input :price, :wrapper => :append do %>
        <%= f.input_field :price %><span class="add-on">$</span>
    <% end %>

    <%= f.input :shipsfrom, label: "Ships From", :wrapper => :append do %>
        <%= f.input_field :shipsfrom %><span class="add-on"><i class="icon-flag"></i></span>
    <% end %>

    <%= f.association :category,  as: :select, :prompt => 'Select one' %>
    <%= f.input :description, as: :text, input_html: { rows: "5"} %>

    <%= f.button :submit, class: "btn btn-primary" %>


<% end %>
