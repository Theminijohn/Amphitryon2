<div class="container-fluid">
  <div class="row-fluid">

    <!-- Pin image Span -->
    <div class="show_pin span8">

      <div>
        <%=  image_tag @pin.image %>
      </div>



      <div id="pinlightbox" class="lightbox hide fade"  tabindex="-1" role="dialog" aria-hidden="true">
        <div class='lightbox-content'>
          <%=  image_tag @pin.image %>
        </div>
      </div>

      <div class="description">

        <p>
          <%= @pin.pinname %>
        </p>

        <%= link_to  "#", class: "btn btn-danger btn-small" do %>
            <i class="icon-heart icon-white"></i> Like
        <% end %>


        <div class="pull-right">
          <%= link_to  "#pinlightbox", class: "btn btn-small", :data => {:toggle=>"lightbox"} do %>
              <i class="icon-zoom-in"></i> Toggle
          <% end %>
        </div>
      </div>
    </div>
    <!--Pin Image Span END -->


    <!-- Pin Image Info and Comments -->
    <div class="span4 ">
      <div class="show_pin_user">
        <div class="media sho_pin_user">
          <a class="pull-left" >
            <%= image_tag @pin.user.avatar.url(:thumb), class: "size48" %>
          </a>
          <div class="media-body">
            <h4 class="media-heading show_pin_user_name"><%= @pin.user.name%></h4>
            <small class="show_pin_user_meta">
              <%= link_to "View my Profile", @pin.user %>
            </small>
          </div>
          <div class="btn-group pull-right">

            <%= link_to  root_path, class: "btn btn-small" do %>
                <i class="icon-arrow-left "></i> Back
            <% end %>
            <% if current_user == @pin.user %>
                <%= link_to  edit_pin_path(@pin), class: "btn btn-small" do %>
                    <i class="icon-edit "></i> Edit
                <% end %>
                <%= link_to @pin, method: :delete, data: { confirm: 'Are you sure?' },
                            class: "btn btn-small btn-danger" do %>
                    <i class="icon-trash "></i> Delete
                <% end %>
                <% end %>
          </div>
        </div>
      </div>

      <hr>

      <p>
        <%= @pin.description %> <br>
      </p>

      <hr>

      <div>
      <!-- Share Button BEGIN -->
      <div class="addthis_toolbox addthis_default_style ">
        <a class="addthis_button_facebook_like" fb:like:layout="button_count"></a>
        <a class="addthis_button_tweet"></a>
        <a class="addthis_button_pinterest_pinit"></a>
      </div>
      <script type="text/javascript">var addthis_config = {"data_track_addressbar":true};</script>
      <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-51e7733c196e2f4b"></script>
      <!-- Share Button END -->
      </div>


